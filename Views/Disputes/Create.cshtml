@model Karigar.Models.Dispute
@{
    ViewData["Title"] = "Report Issue";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Report Issue or Dispute</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>Please provide details about the issue you're experiencing. Our admin team will review and resolve it promptly.
                    </div>
                    
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ServiceRequestId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Reason" class="form-label">Issue Type *</label>
                            <select asp-for="Reason" class="form-select" required>
                                <option value="">Select issue type</option>
                                <option value="Service Not Provided">Service Not Provided</option>
                                <option value="Poor Quality Service">Poor Quality Service</option>
                                <option value="Payment Dispute">Payment Dispute</option>
                                <option value="Provider No Show">Provider No Show</option>
                                <option value="Cancellation Issue">Cancellation Issue</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Please provide detailed information about the issue..." required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Bookings" asp-action="Details" asp-route-id="@Model.ServiceRequestId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-paper-plane me-1"></i>Submit Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

