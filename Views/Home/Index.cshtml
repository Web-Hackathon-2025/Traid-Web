@{
    ViewData["Title"] = "Home - Karigar";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Find Trusted Local Service Providers</h1>
                <p class="lead mb-4">Connect with skilled professionals in your area. From plumbing to electrical, we've got you covered.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="ServiceProviders" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-search me-2"></i>Browse Services
                    </a>
                    @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("ServiceProvider") && !User.IsInRole("Admin"))
                    {
                        <a asp-controller="Account" asp-action="BecomeServiceProvider" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-tie me-2"></i>Become a Provider
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-tools" style="font-size: 200px; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <h2 class="text-center mb-4">Browse by Category</h2>
    <div class="row g-4">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body text-center">
                        <div class="mb-3" style="font-size: 3rem;">@category.Icon</div>
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text text-muted small">@category.Description</p>
                        <a asp-controller="ServiceProviders" asp-action="Index" asp-route-categoryId="@category.Id" class="btn btn-outline-primary btn-sm">
                            View Services
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (ViewBag.FeaturedProviders != null && ViewBag.FeaturedProviders.Count > 0)
{
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Featured Service Providers</h2>
            <div class="row g-4">
                @foreach (var item in ViewBag.FeaturedProviders)
                {
                    var provider = item.Provider;
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@provider.BusinessName</h5>
                                <p class="card-text text-muted small">@provider.City, @provider.State</p>
                                @if (item.AverageRating > 0)
                                {
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= item.AverageRating ? "text-warning" : "text-muted")"></i>
                                        }
                                        <span class="ms-2 small">@item.AverageRating.ToString("F1") (@item.TotalReviews reviews)</span>
                                    </div>
                                }
                                <p class="card-text small">@(provider.Description?.Length > 100 ? provider.Description.Substring(0, 100) + "..." : provider.Description)</p>
                                <a asp-controller="ServiceProviders" asp-action="Details" asp-route-id="@provider.Id" class="btn btn-primary btn-sm">
                                    View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-shield-alt text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>Verified Providers</h4>
                <p class="text-muted">All service providers are verified and approved by our admin team.</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-star text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>Customer Reviews</h4>
                <p class="text-muted">Read authentic reviews from customers who have used our services.</p>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="feature-box p-4">
                <i class="fas fa-clock text-primary mb-3" style="font-size: 3rem;"></i>
                <h4>Easy Booking</h4>
                <p class="text-muted">Book services quickly and track your requests in real-time.</p>
            </div>
        </div>
    </div>
</div>
