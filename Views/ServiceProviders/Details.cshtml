@model Karigar.Models.ServiceProviderViewModel
@using Karigar.Models
@{
    ViewData["Title"] = Model.BusinessName;
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="mb-1">@Model.BusinessName</h2>
                            <p class="text-muted mb-0">
                                <i class="fas fa-map-marker-alt me-1"></i>@Model.Address, @Model.City, @Model.State @Model.ZipCode
                            </p>
                        </div>
                        @if (Model.AverageRating.HasValue)
                        {
                            <div class="text-end">
                                <div class="mb-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= Model.AverageRating ? "text-warning" : "text-muted")" style="font-size: 1.2rem;"></i>
                                    }
                                </div>
                                <strong>@Model.AverageRating.Value.ToString("F1")</strong>
                                <small class="text-muted d-block">@Model.TotalReviews reviews</small>
                            </div>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5>About</h5>
                            <p>@Model.Description</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <div class="mb-3">
                            <strong><i class="fas fa-phone me-2"></i>Phone:</strong>
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Services Offered</h5>
                </div>
                <div class="card-body">
                    @if (Model.Services.Any())
                    {
                        <div class="row g-3">
                            @foreach (var service in Model.Services)
                            {
                                <div class="col-md-6">
                                    <div class="card border">
                                        <div class="card-body">
                                            <h6 class="card-title">@service.Name</h6>
                                            <p class="card-text small text-muted">@service.Description</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong class="text-primary">â‚¹@service.Price</strong>
                                                    @if (!string.IsNullOrEmpty(service.PriceUnit))
                                                    {
                                                        <small class="text-muted">/@service.PriceUnit</small>
                                                    }
                                                </div>
                                                @if (ViewBag.IsCustomer == true)
                                                {
                                                    <a asp-controller="Bookings" asp-action="Create" asp-route-serviceId="@service.Id" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-calendar-plus me-1"></i>Book Now
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No services available at the moment.</p>
                    }
                </div>
            </div>

            @if (ViewBag.Reviews != null && ((List<Review>)ViewBag.Reviews).Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>Customer Reviews</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var review in (List<Review>)ViewBag.Reviews)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <div>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="mb-0">@review.Comment</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile">
                    }
                    else
                    {
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; font-size: 3rem;">
                            <i class="fas fa-user-tie"></i>
                        </div>
                    }
                    
                    @if (Model.AverageRating.HasValue)
                    {
                        <div class="mb-3">
                            <h3>@Model.AverageRating.Value.ToString("F1")</h3>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= Model.AverageRating ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                            <small class="text-muted">@Model.TotalReviews reviews</small>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <a href="tel:@Model.PhoneNumber" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-phone me-1"></i>Call Now
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

