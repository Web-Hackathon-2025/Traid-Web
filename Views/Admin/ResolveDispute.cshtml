@model Karigar.Models.Dispute
@{
    ViewData["Title"] = "Resolve Dispute";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-gradient-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-gavel me-2"></i>Resolve Dispute #@Model.Id</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5>Dispute Details</h5>
                        <div class="bg-light p-3 rounded mb-3">
                            <p><strong>Service Request:</strong> @Model.ServiceRequest?.Service?.Name</p>
                            <p><strong>Provider:</strong> @Model.ServiceRequest?.ServiceProvider?.BusinessName</p>
                            <p><strong>Reason:</strong> @Model.Reason</p>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p><strong>Description:</strong> @Model.Description</p>
                            }
                            <p><strong>Reported On:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    <form asp-action="ResolveDispute" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Resolution Status *</label>
                            <select name="status" class="form-select" required>
                                <option value="Pending" selected="@(Model.Status == DisputeStatus.Pending)">Pending</option>
                                <option value="UnderReview" selected="@(Model.Status == DisputeStatus.UnderReview)">Under Review</option>
                                <option value="Resolved" selected="@(Model.Status == DisputeStatus.Resolved)">Resolved</option>
                                <option value="Dismissed" selected="@(Model.Status == DisputeStatus.Dismissed)">Dismissed</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Admin Notes</label>
                            <textarea name="adminNotes" class="form-control" rows="4" placeholder="Add your notes about the resolution...">@Model.AdminNotes</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Disputes" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Resolution
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

