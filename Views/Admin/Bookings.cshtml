@model IEnumerable<Karigar.Models.ServiceRequest>
@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-alt me-2"></i>Manage Bookings</h2>
        <div>
            <a asp-action="Bookings" class="btn btn-outline-primary @(ViewBag.Status == null ? "active" : "")">All</a>
            <a asp-action="Bookings" asp-route-status="Requested" class="btn btn-outline-warning @(ViewBag.Status == "Requested" ? "active" : "")">Requested</a>
            <a asp-action="Bookings" asp-route-status="Confirmed" class="btn btn-outline-info @(ViewBag.Status == "Confirmed" ? "active" : "")">Confirmed</a>
            <a asp-action="Bookings" asp-route-status="Completed" class="btn btn-outline-success @(ViewBag.Status == "Completed" ? "active" : "")">Completed</a>
        </div>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Service</th>
                            <th>Provider</th>
                            <th>Customer</th>
                            <th>Status</th>
                            <th>Requested Date</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.Service?.Name</td>
                                <td>@booking.ServiceProvider?.BusinessName</td>
                                <td>@booking.CustomerId</td>
                                <td>
                                    @switch (booking.Status)
                                    {
                                        case Karigar.Models.RequestStatus.Requested:
                                            <span class="badge bg-warning">Requested</span>
                                            break;
                                        case Karigar.Models.RequestStatus.Confirmed:
                                            <span class="badge bg-info">Confirmed</span>
                                            break;
                                        case Karigar.Models.RequestStatus.InProgress:
                                            <span class="badge bg-primary">In Progress</span>
                                            break;
                                        case Karigar.Models.RequestStatus.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case Karigar.Models.RequestStatus.Cancelled:
                                            <span class="badge bg-secondary">Cancelled</span>
                                            break;
                                        case Karigar.Models.RequestStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                                </td>
                                <td>@booking.RequestedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (booking.FinalPrice.HasValue)
                                    {
                                        <strong>₹@booking.FinalPrice.Value</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">₹@booking.Service?.Price</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No bookings found.
        </div>
    }
</div>

