@model IEnumerable<object>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>Manage Users</h2>
        <form method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2" value="@ViewBag.Search" placeholder="Search...">
            <select name="role" class="form-select me-2">
                <option value="">All Roles</option>
                <option value="Customer" selected="@(ViewBag.Role == "Customer")">Customer</option>
                <option value="ServiceProvider" selected="@(ViewBag.Role == "ServiceProvider")">Service Provider</option>
                <option value="Admin" selected="@(ViewBag.Role == "Admin")">Admin</option>
            </select>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Service Provider</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (dynamic item in Model)
                        {
                            <tr>
                                <td>@item.User.Email</td>
                                <td>
                                    <span class="badge bg-primary">@item.Role</span>
                                </td>
                                <td>
                                    @if (item.ServiceProvider != null)
                                    {
                                        <span>@item.ServiceProvider.BusinessName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ServiceProvider != null)
                                    {
                                        @if (item.ServiceProvider.IsApproved)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        @if (item.ServiceProvider.IsSuspended)
                                        {
                                            <span class="badge bg-danger">Suspended</span>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No users found.
        </div>
    }
</div>

