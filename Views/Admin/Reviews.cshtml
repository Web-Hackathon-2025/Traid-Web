@model IEnumerable<Karigar.Models.Review>
@{
    ViewData["Title"] = "Moderate Reviews";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-star me-2"></i>Moderate Reviews</h2>
        <form method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2" value="@ViewBag.Search" placeholder="Search...">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var review in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5>@review.ServiceProvider?.BusinessName</h5>
                                    <p class="text-muted mb-0">Service: @review.ServiceRequest?.Service?.Name</p>
                                </div>
                                <div class="text-end">
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p class="mb-3">@review.Comment</p>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (review.IsVisible)
                                    {
                                        <span class="badge bg-success">Visible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hidden</span>
                                    }
                                </div>
                                <form asp-action="ToggleReviewVisibility" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@review.Id" />
                                    <button type="submit" class="btn btn-sm @(review.IsVisible ? "btn-warning" : "btn-success")">
                                        <i class="fas fa-eye@(review.IsVisible ? "-slash" : "")"></i>
                                        @(review.IsVisible ? "Hide" : "Show")
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No reviews found.
        </div>
    }
</div>

