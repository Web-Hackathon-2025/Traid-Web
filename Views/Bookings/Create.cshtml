@model Karigar.Models.ServiceRequest
@{
    ViewData["Title"] = "Book Service";
    var service = ViewBag.Service as Karigar.Models.Service;
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-plus me-2"></i>Book Service</h4>
                </div>
                <div class="card-body">
                    @if (service != null)
                    {
                        <div class="alert alert-info mb-4">
                            <h5>@service.Name</h5>
                            <p class="mb-1"><strong>Provider:</strong> @service.ServiceProvider?.BusinessName</p>
                            <p class="mb-0"><strong>Price:</strong> â‚¹@service.Price @service.PriceUnit</p>
                        </div>
                    }
                    
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ServiceId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="ServiceAddress" class="form-label">Service Address *</label>
                            <textarea asp-for="ServiceAddress" class="form-control" rows="3" placeholder="Enter the address where service is needed"></textarea>
                            <span asp-validation-for="ServiceAddress" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="RequestedDate" class="form-label">Preferred Date & Time *</label>
                            <input asp-for="RequestedDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="RequestedDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="SpecialInstructions" class="form-label">Special Instructions</label>
                            <textarea asp-for="SpecialInstructions" class="form-control" rows="3" placeholder="Any special requirements or instructions..."></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="ServiceProviders" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-calendar-check me-1"></i>Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

