@model IEnumerable<Karigar.Models.ServiceRequest>
@{
    ViewData["Title"] = ViewBag.IsServiceProvider == true ? "Service Requests" : "My Bookings";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="fas fa-calendar-check me-2"></i>@(ViewBag.IsServiceProvider == true ? "Service Requests" : "My Bookings")
    </h2>
    
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="card-title">@booking.Service?.Name</h5>
                                    <p class="text-muted mb-2">
                                        <strong>@(ViewBag.IsServiceProvider == true ? "Customer" : "Provider"):</strong>
                                        @if (ViewBag.IsServiceProvider == true)
                                        {
                                            <span>Customer Request</span>
                                        }
                                        else
                                        {
                                            <span>@booking.ServiceProvider?.BusinessName</span>
                                        }
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>@booking.ServiceAddress
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-calendar me-1"></i>Requested: @booking.RequestedDate.ToString("MMM dd, yyyy hh:mm tt")
                                    </p>
                                    @if (booking.ScheduledDate.HasValue)
                                    {
                                        <p class="text-muted mb-2">
                                            <i class="fas fa-clock me-1"></i>Scheduled: @booking.ScheduledDate.Value.ToString("MMM dd, yyyy hh:mm tt")
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(booking.SpecialInstructions))
                                    {
                                        <p class="text-muted mb-2">
                                            <strong>Instructions:</strong> @booking.SpecialInstructions
                                        </p>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <div class="mb-3">
                                        @switch (booking.Status)
                                        {
                                            case Karigar.Models.RequestStatus.Requested:
                                                <span class="badge bg-warning"><i class="fas fa-clock me-1"></i>Requested</span>
                                                break;
                                            case Karigar.Models.RequestStatus.Confirmed:
                                                <span class="badge bg-info"><i class="fas fa-check-circle me-1"></i>Confirmed</span>
                                                break;
                                            case Karigar.Models.RequestStatus.InProgress:
                                                <span class="badge bg-primary"><i class="fas fa-spinner me-1"></i>In Progress</span>
                                                break;
                                            case Karigar.Models.RequestStatus.Completed:
                                                <span class="badge bg-success"><i class="fas fa-check-double me-1"></i>Completed</span>
                                                break;
                                            case Karigar.Models.RequestStatus.Cancelled:
                                                <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>Cancelled</span>
                                                break;
                                            case Karigar.Models.RequestStatus.Rejected:
                                                <span class="badge bg-danger"><i class="fas fa-ban me-1"></i>Rejected</span>
                                                break;
                                        }
                                    </div>
                                    @if (booking.FinalPrice.HasValue)
                                    {
                                        <p class="mb-2"><strong>Final Price: â‚¹@booking.FinalPrice.Value</strong></p>
                                    }
                                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>No bookings found.
        </div>
    }
</div>

