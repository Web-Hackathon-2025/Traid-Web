@model Karigar.Models.ServiceRequest
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Booking Details</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Service:</strong> @Model.Service?.Name
                    </div>
                    <div class="mb-3">
                        <strong>Category:</strong> @Model.Service?.Category?.Name
                    </div>
                    <div class="mb-3">
                        <strong>@(ViewBag.IsServiceProvider == true ? "Customer" : "Provider"):</strong>
                        @if (ViewBag.IsServiceProvider == true)
                        {
                            <span>Customer Request</span>
                        }
                        else
                        {
                            <span>@Model.ServiceProvider?.BusinessName</span>
                        }
                    </div>
                    <div class="mb-3">
                        <strong>Status:</strong>
                        @switch (Model.Status)
                        {
                            case Karigar.Models.RequestStatus.Requested:
                                <span class="badge bg-warning"><i class="fas fa-clock me-1"></i>Requested</span>
                                break;
                            case Karigar.Models.RequestStatus.Confirmed:
                                <span class="badge bg-info"><i class="fas fa-check-circle me-1"></i>Confirmed</span>
                                break;
                            case Karigar.Models.RequestStatus.InProgress:
                                <span class="badge bg-primary"><i class="fas fa-spinner me-1"></i>In Progress</span>
                                break;
                            case Karigar.Models.RequestStatus.Completed:
                                <span class="badge bg-success"><i class="fas fa-check-double me-1"></i>Completed</span>
                                break;
                            case Karigar.Models.RequestStatus.Cancelled:
                                <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>Cancelled</span>
                                break;
                            case Karigar.Models.RequestStatus.Rejected:
                                <span class="badge bg-danger"><i class="fas fa-ban me-1"></i>Rejected</span>
                                break;
                        }
                    </div>
                    <div class="mb-3">
                        <strong>Service Address:</strong>
                        <p class="mb-0">@Model.ServiceAddress</p>
                    </div>
                    <div class="mb-3">
                        <strong>Requested Date:</strong> @Model.RequestedDate.ToString("MMM dd, yyyy hh:mm tt")
                    </div>
                    @if (Model.ScheduledDate.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Scheduled Date:</strong> @Model.ScheduledDate.Value.ToString("MMM dd, yyyy hh:mm tt")
                        </div>
                    }
                    @if (Model.CompletedDate.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Completed Date:</strong> @Model.CompletedDate.Value.ToString("MMM dd, yyyy hh:mm tt")
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.SpecialInstructions))
                    {
                        <div class="mb-3">
                            <strong>Special Instructions:</strong>
                            <p class="mb-0">@Model.SpecialInstructions</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.CancellationReason))
                    {
                        <div class="mb-3">
                            <strong>Cancellation Reason:</strong>
                            <p class="mb-0 text-danger">@Model.CancellationReason</p>
                        </div>
                    }
                    @if (Model.FinalPrice.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Final Price:</strong> â‚¹@Model.FinalPrice.Value
                        </div>
                    }
                </div>
            </div>
            
            @if (ViewBag.CanReview == true)
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <p>Service has been completed. Leave a review!</p>
                        <a asp-controller="Reviews" asp-action="Create" asp-route-serviceRequestId="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-star me-1"></i>Write Review
                        </a>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsServiceProvider == true)
                    {
                        @if (Model.Status == Karigar.Models.RequestStatus.Requested)
                        {
                            <form asp-action="Accept" method="post" class="mb-2">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="mb-2">
                                    <label class="form-label">Schedule Date & Time</label>
                                    <input type="datetime-local" name="scheduledDate" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check me-1"></i>Accept Request
                                </button>
                            </form>
                            <form asp-action="Reject" method="post" class="mb-2">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="mb-2">
                                    <label class="form-label">Reason (optional)</label>
                                    <textarea name="cancellationReason" class="form-control" rows="2"></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-times me-1"></i>Reject Request
                                </button>
                            </form>
                        }
                        @if (Model.Status == Karigar.Models.RequestStatus.Confirmed)
                        {
                            <form asp-action="Complete" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="mb-2">
                                    <label class="form-label">Final Price</label>
                                    <input type="number" name="finalPrice" step="0.01" class="form-control" value="@Model.Service?.Price" />
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check-double me-1"></i>Mark as Completed
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        @if (Model.Status == Karigar.Models.RequestStatus.Requested || Model.Status == Karigar.Models.RequestStatus.Confirmed)
                        {
                            <form asp-action="Cancel" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="mb-2">
                                    <label class="form-label">Cancellation Reason (optional)</label>
                                    <textarea name="cancellationReason" class="form-control" rows="2"></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-times me-1"></i>Cancel Booking
                                </button>
                            </form>
                        }
                    }
                    <a asp-action="MyBookings" class="btn btn-secondary w-100 mt-2">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

